# CLImpire server defaults
PORT=8787
HOST=127.0.0.1

# Required: encrypt OAuth tokens stored in SQLite.
# Generate with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
OAUTH_ENCRYPTION_SECRET="replace-with-a-long-random-string"

# Optional legacy fallback for OAUTH_ENCRYPTION_SECRET
# SESSION_SECRET="replace-with-a-long-random-string"

# Optional runtime paths (defaults: ./climpire.sqlite and ./logs)
# DB_PATH="./climpire.sqlite"
# LOGS_DIR="./logs"

# Optional callback base URL override
# OAUTH_BASE_URL="http://127.0.0.1:8787"

# GitHub OAuth (Settings -> Developer settings -> OAuth Apps)
# OAUTH_GITHUB_CLIENT_ID="..."
# OAUTH_GITHUB_CLIENT_SECRET="..."

# Google OAuth (Google Cloud Console -> OAuth consent screen)
# OAUTH_GOOGLE_CLIENT_ID="..."
# OAUTH_GOOGLE_CLIENT_SECRET="..."

# Optional explicit Gemini OAuth credentials
# GEMINI_OAUTH_CLIENT_ID="..."
# GEMINI_OAUTH_CLIENT_SECRET="..."

# Optional model provider settings
# OPENAI_API_KEY="..."
# GOOGLE_CLOUD_PROJECT="..."
# GOOGLE_CLOUD_PROJECT_ID="..."
